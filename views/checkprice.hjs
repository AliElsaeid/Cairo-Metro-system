<!DOCTYPE html>
<html>
<head>
    <title>Check Price</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-inverse" style="padding-left: 130px;">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/">Logout</a></li>
            </ul>
        </nav>
    </div>
    <script>
    $(document).ready(function() {
        $("#check").click(function() {
            var originId = $('#originId').val();
            var destinationId = $('#destinationId').val();
            $.ajax({
                type: "GET",
                url: '/api/v1/tickets/price/' + originId + '&' + destinationId,
                contentType: 'application/json',
                success: function(serverResponse) {
                    if (serverResponse) {
                        alert('Success');
                        $("#totalPrice").text("Total Price = " + serverResponse.totalPrice);
                    }
                },
                error: function(errorResponse) {
                    if (errorResponse) {
                        alert("Error " + errorResponse.responseText);
                    }
                }
            });
        });
    });
    </script>
    <div class="center">
        <form class="form-horizontal" style="width: 50%;">
            <h1 style="text-align: right;">Price</h1>
            <br/>
            <div class="form-group">
                <label for="originId" class="col-sm-2 control-label">Origin ID</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="originId" name="originId" placeholder="OID" value="">
                </div>
            </div>
            <div class="form-group">
                <label for="destinationId" class="col-sm-2 control-label">Destination ID</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="destinationId" name="destinationId" placeholder="DID" value="">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <input id="check" name="check" type="button" value="Check Price" class="btn btn-primary">
                </div>
            </div>
        </form>
    </div>
    <p id="totalPrice">Total Price = </p>
</body>
</html>
