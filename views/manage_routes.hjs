<!DOCTYPE html>
<html>
  <head>
    <title>Routes</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  </head>
  <body>
    <div>
      <nav class="navbar navbar-inverse" style="padding-left: 130px;">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/admin_dashboard">Home</a></li>
          <li><a href="/">Logout</a></li>
        </ul>
      </nav>
    </div>

    <div class="center">
        <h1 style="text-align: center;"> Add route</h1>
      <br/>
     
        <div class="form-group">
          <label for="routename" class="col-sm-2 control-label">Route Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="routename" name="routename" placeholder="Route Name" value="">
          </div>
        </div>
        <br/>
        <br/>
        <div class="form-group">
          <label for="stationtype" class="col-sm-2 control-label">Fromstationid</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="fromstationid" name="fromstationid" placeholder="Fromstationid" value="">
          </div>
        </div>
        <br/>
        <br/>
        <div class="form-group">
          <label for="stationposition" class="col-sm-2 control-label">Tostationid</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="tostationid" name="tostationid" placeholder="Tostationid" value="">
          </div>
        </div>
        <br/>
        <br/>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <input id="btnAddRoute" name="btnAddRoute" type="button" value="Add Route" class="btn btn-primary">
          </div>
        </div>
      
    </div>  
    <br/>
    <br/>
    <br/>


    
    <br/>
   <table class="table">
  <thead>
    <tr>
      
      <th scope="col">Name</th>
      <th scope="col">FromstationId</th>
      <th scope="col">TostationId</th>
      <th scope="col">Action</th>
    </tr>
    {{#routes}}
    <tr>
      
      <td>{{routename}}</td>
      <td>{{fromstationid}}</td>
      <td>{{tostationid}}</td>
      <td>
        <div>
          <input type="text" class="newRouteName" placeholder="New Name">
          <button class="updateBtn" data-id="{{id}}">Update</button>
          <button class="deleteBtn" data-id="{{id}}">Delete</button>
        </div>
      </td>
    </tr> 
    {{/routes}}
  </thead>
  <tbody id="routeTableBody">
    
  </tbody>
</table>



    <script>
      $(document).ready(function() {
        $("#btnAddRoute").click(function() {
          const routename = $('#routename').val();
          const fromstationid = $('#fromstationid').val();
          const tostationid = $('#tostationid').val();

          if (!routename || !fromstationid || !tostationid ) {
            alert('All fields are required');
            return;
          }

          const data = {
            routename,
            fromstationid,
            tostationid
          };

          $.ajax({
            type: "post",
            url: '/api/v1/route',
            data: JSON.stringify(data),
            contentType: 'application/json',
            success: function(serverResponse) {
              if (serverResponse) {
                alert('Successfully added route');
                location.reload();
              }
            },
            error: function(errorResponse) {
              if (errorResponse) {
                alert(`Error in adding route: ${errorResponse.responseText}`);
              }
            }
          });
        });
      });
    </script>
     <script>
  $(document).ready(function() {
    $(".updateBtn").click(function() {
      const id = $(this).data("id");
      const newRouteName = $(this).siblings(".newRouteName").val();

      if (!newRouteName) {
        alert('Field is required');
        return;
      }

      const data = {
        routename: newRouteName
      };

      $.ajax({
        type: "PUT",
        url: '/api/v1/route/' + id,
        data: JSON.stringify(data),
        contentType: 'application/json',
        success: function(serverResponse) { 
          if (serverResponse) {
            alert('Successfully updated route');
            location.reload();
          }
        },
        error: function(errorResponse) {
          if (errorResponse) {
            alert(`Error updating route: ${errorResponse.responseText}`);
          }
        }
      });
    });

    $(".deleteBtn").click(function() {
      const id = $(this).data("id");

      $.ajax({
        type: "DELETE",
        url: '/api/v1/route/' + id,
        contentType: 'application/json',
        success: function(serverResponse) { 
          if (serverResponse) {
            alert('Successfully deleted route');
            location.reload();
          }
        },
        error: function(errorResponse) {
          if (errorResponse) {
            alert(`Error deleting route: ${errorResponse.responseText}`);
          }
        }
      });
    });
  });
</script>
<style>
  

  .updateBtn {
    background-color: blue;
    color: white;
  }

  .deleteBtn {
    background-color: red;
    color: white;
  }
</style>
  </body>
</html>
